---
import PageLayout from '../layouts/PageLayout.astro';
import { useTranslations } from '../i18n/utils';

const t = useTranslations('fr');
---

<PageLayout
  title="Mentions légales — Nos limites"
  description="Mentions légales du site Nos limites."
>
  <section class="section page-header">
    <div class="container">
      <h1 class="section-title">{t('legal.title')}</h1>
    </div>
  </section>

  <section class="section">
    <div class="container legal-content">
      <h2>{t('legal.editor.title')}</h2>
      <p>{t('legal.editor.text')}</p>

      <h2>{t('legal.hosting.title')}</h2>
      <p>{t('legal.hosting.text')}</p>

      <h2>{t('legal.ip.title')}</h2>
      <p>{t('legal.ip.text')}</p>
    </div>
  </section>
</PageLayout>

<style>
  .page-header {
    background: linear-gradient(135deg, rgba(124, 58, 237, 0.05) 0%, rgba(236, 72, 153, 0.05) 100%);
    padding-bottom: var(--spacing-2xl);
  }

  .legal-content {
    max-width: 720px;
  }

  .legal-content h2 {
    font-size: var(--font-size-xl);
    margin-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-md);
    color: var(--color-text);
  }

  .legal-content p {
    color: var(--color-text-light);
    line-height: 1.8;
    margin-bottom: var(--spacing-md);
  }
</style>
