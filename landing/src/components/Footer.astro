---
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';
import LanguagePicker from './LanguagePicker.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const tp = useTranslatedPath(lang);

const APP_URL = 'https://app.nos-limites.com/';

const legalLinks = [
  { label: t('footer.privacy'), href: tp(lang === 'fr' ? '/confidentialite' : '/privacy') },
  { label: t('footer.legal'), href: tp(lang === 'fr' ? '/mentions-legales' : '/legal') },
  { label: t('footer.terms'), href: tp(lang === 'fr' ? '/cgu' : '/terms') },
];
---

<footer class="footer">
  <div class="footer-inner container">
    <div class="footer-brand">
      <div class="footer-logo">
        <svg width="28" height="28" viewBox="0 0 100 100" aria-hidden="true">
          <circle cx="50" cy="50" r="50" fill="#7C3AED"/>
          <text x="50" y="55" text-anchor="middle" dominant-baseline="middle" font-family="Nunito, sans-serif" font-weight="700" font-size="36" fill="white">NL</text>
        </svg>
        <span>Nos limites</span>
      </div>
      <p class="footer-tagline">{t('footer.tagline')}</p>
    </div>

    <div class="footer-links">
      <div class="footer-col">
        <h4>{lang === 'fr' ? 'Navigation' : 'Navigation'}</h4>
        <a href={tp('/')}>{t('nav.home')}</a>
        <a href={tp(lang === 'fr' ? '/fonctionnalites' : '/features')}>{t('nav.features')}</a>
        <a href={tp(lang === 'fr' ? '/comment-ca-marche' : '/how-it-works')}>{t('nav.how')}</a>
        <a href={tp(lang === 'fr' ? '/faq' : '/faq')}>{t('nav.faq')}</a>
      </div>
      <div class="footer-col">
        <h4>{lang === 'fr' ? 'LÃ©gal' : 'Legal'}</h4>
        {legalLinks.map(link => (
          <a href={link.href}>{link.label}</a>
        ))}
      </div>
      <div class="footer-col">
        <h4>{lang === 'fr' ? 'Application' : 'App'}</h4>
        <a href={APP_URL}>{t('nav.cta')}</a>
        <LanguagePicker />
      </div>
    </div>

    <div class="footer-bottom">
      <p>{t('footer.rights')}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-text);
    color: rgba(255, 255, 255, 0.8);
    padding: var(--spacing-3xl) 0 var(--spacing-xl);
    margin-top: auto;
  }

  .footer-inner {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2xl);
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: white;
  }

  .footer-tagline {
    color: rgba(255, 255, 255, 0.6);
    font-size: var(--font-size-sm);
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: var(--spacing-xl);
  }

  .footer-col {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .footer-col h4 {
    color: white;
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-xs);
  }

  .footer-col a {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--font-size-sm);
    text-decoration: none;
    transition: color 0.2s;
    min-height: auto;
    min-width: auto;
  }

  .footer-col a:hover {
    color: white;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: var(--spacing-lg);
  }

  .footer-bottom p {
    font-size: var(--font-size-sm);
    color: rgba(255, 255, 255, 0.5);
    text-align: center;
  }
</style>
