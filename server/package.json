{
  "name": "nos-limites-server",
  "version": "1.0.0",
  "description": "Backend API for Nos limites - mutual consent boundary app",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test:config": "tsx --test tests/cors-config.test.ts tests/frontend-base-url.test.ts",
