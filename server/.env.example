# Server Configuration
PORT=3001
NODE_ENV=development

# Database - SQLite (local file for development)
DATABASE_URL=file:./data/noslimites.db

# JWT Secret (change in production!)
JWT_SECRET=dev-secret-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production

# Session duration
SESSION_DURATION=30d

# Magic Link
MAGIC_LINK_EXPIRY=15m
MAGIC_LINK_BASE_URL=http://localhost:5173

# Email provider: "console" (dev - logs to console) or "resend" (real emails)
EMAIL_PROVIDER=console
# Required when EMAIL_PROVIDER=resend:
RESEND_API_KEY=
# Sender address (must be verified in Resend dashboard)
EMAIL_FROM=Nos limites <noreply@noslimites.app>

# OAuth (optional - leave empty to disable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
